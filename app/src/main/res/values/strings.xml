<resources>
    <string name="app_name">StringLocalizationInAndroid</string>
    <string name="default_locale">"Country Code: %s\nCountry Name: %s</string>
    <string name="customer_name">Customer Name: %s</string> <!--Format specifier for strings -->
    <string name="stock">Items: %d</string> <!--Format specifier for integers longs-->
    <string name="price">KES. %f</string> <!--Format specifier for floats and doubles-->
    <plurals name="songs"> <!--String pluralization using the @plurals resource.-->
        <item quantity="one">You have %d song.</item>
        <item quantity="other">You have %d songs.</item>
    </plurals>
    <plurals name="persons">
        <item quantity="zero">[zero] %d people.</item>
        <item quantity="one">[one] %d person.</item>
        <item quantity="two">[two] %d people.</item>
        <item quantity="other">[other] %d people.</item>
    </plurals>
    <plurals name="students">
        <item quantity="one">[one] %1$d %2$s student.</item>
        <item quantity="other">[other] %1$d %2$s student.</item>
    </plurals>
</resources>